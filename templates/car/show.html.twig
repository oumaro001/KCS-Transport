{% extends 'base.html.twig' %}

{% block title %}Véhicule{% endblock %}

{% block body %}
    <h1 class="ms-4">Fiche véhicule</h1>

<table class="table mx-auto mt-3" style="width:80%;border:2px solid skyblue">
        <tbody>
         <tr class="table-primary">
                <th>Marque</th>
                <td>{{ car.brand }}</td>
            </tr>
            <tr class="table-danger">
                <th>Modéle</th>
                <td>{{ car.model }}</td>
            </tr>
            <tr class="table-success">
                <th>Immatrilation</th>
                <td>{{ car.register }} 
                </td>
            </tr>
            <tr class="table-ligth">
                <th>Places</th>
                <td>{{ car.places }}</td>
            </tr>
            <tr class="table-info">
                <th>Rampe</th>
                {% if car.ramp == "Yes" %}
                <td>OUI</td>
                {% else %}
                <td>NON</td>
                {% endif %}
            </tr>
            <tr class="table-dark">
                <th>Photo</th>
                <td><img src="{{ vich_uploader_asset(car, 'imageFile') }}"" class="card-img-top" alt="photo de profil" style="width: 15rem;border:solid 2px tomato;border-radius:20px;object-fit: cover;"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_car_index') }}" class="btn btn-success ms-5"><i class="fa-solid fa-right-from-bracket"></i> Retour à la liste</a>

    <a href="{{ path('app_car_edit', {'id': car.id}) }}" class="btn btn-warning ms-5"><i class="fa-solid fa-pen"></i> Modifier</a>

    {{ include('car/_delete_form.html.twig') }}
{% endblock %}
